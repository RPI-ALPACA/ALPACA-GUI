#:kivy 1.11.1

<NewProjectScreen>:
    FloatLayout:
        BoxLayout:
            BoxLayout:
                orientation: "horizontal"
                height: 30

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .25

                    TabbedPanel:
                        do_default_tab: False

                        TabbedPanelItem:

                            text: "Drag & drop"
                            Label:
                                text: "Drag & drop"

                            text: "1st Tab"
                            Label:
                                text: "Content of First Panel"
                        TabbedPanelItem:
                            text: "2nd Tab"
                            BoxLayout:
                                orientation: "vertical"
                                Button:
                                    text: "Stuff"
                                Label:
                                    text: "Content of Second Panel"

                        TabbedPanelItem:
                            text: "text"
                            Label:
                                text: "Input Text stuff"
            Button:
            	size:
                text: 'Back to menu'
                on_release:
                    root.manager.transition.direction = 'down'
                    root.manager.current = 'Menu'
