#:kivy 1.11.1

<HelpScreen>:
    BoxLayout:
        orientation: "vertical"
        font_name: 'Roboto-Bold.ttf'



<NavigationBar>:
    size_hint_y: 0.1
    padding: 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 0.7, 0.7, 0.7, 1
		Rectangle:
            pos: self.center
            size: self.width, self.height/11


<HelpPanels>:
    do_default_tab: False
    tab_width: self.size[0]/len(self.tab_list)
    size_hint_y: .9
    
    TabbedPanelStrip:
        background_color: (0, 0, 1, .5)    # 50% translucent blue
        border: [0, 0, 0, 0]
        background_image: ''

    TabbedPanelItem:
        id: WhatPanel
        name: "WhatPanel"
        text: "What is ALPACA?"

        BoxLayout:
            orientation: "vertical"
            Label:
                font_size: 42
                text: "What is ALPACA?"
            Label:
                font_size: 32
                text: "ALPACA is an (A)utomated (L)ogic (P)rocessor (A)nd Creation (A)pplication!\nThis program was created to help students design and learn formal logic.\nIt allows for designing and solving formal logic statements through either a text-based or drag and drop based interface."

    TabbedPanelItem:
        id: HowPanel
        name: "HowPanel"
        text: "How do you use it?"
        
        StackLayout:
            orientation: 'lr-tb'

            Label:
                font_size: 42
                text: "How do you use it?"
            Label:
                font_size: 32
                text: "You have two options for how to use ALPACA, either the text-based interface or the drag and drop interface.\n"

            TabbedPanel:
                do_default_tab: False
                tab_width: self.size[0]/len(self.tab_list)

                TabbedPanelItem:
                    text: "How to use Command Line"
                    Label:
                        text: "I'm based on text!"

                TabbedPanelItem:
                    text: "How to use Drag-n-Drop"
                    Label:
                        text: "I'm based on a GUI!"

    TabbedPanelItem:
        id: WhoPanel
        name: "WhoPanel"
        text: "Who made this?"
        Label:
            text: "Content of Third Panel"