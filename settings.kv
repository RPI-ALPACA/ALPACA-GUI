#:kivy 1.11.1

<SettingsScreen>:
    BoxLayout:
        size_hint_y: 0.9
        orientation: "vertical"

<NavigationBar>
    size_hint_y: 0.1
    padding: 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 0.7,0.7,0.7,1
        Rectangle:
            size: root.size

<Slider>
    size_hint_y: 0.9
    rows: 8
    cols: 1

    canvas:
        Rectangle:
            Color:
                rgba: 1,1,0,1

            Label:
                text: "Slider"

            Slider:
                id: slider
                min: 10
                max: 64
                step: 2
                orientation: 'horizontal'

