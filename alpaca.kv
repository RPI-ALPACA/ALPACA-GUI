#:kivy 1.11.1

<Alpaca>:
	canvas:
		Rectangle:
			pos: 0, 4*self.height / 5
			size: self.width/2, self.height / 5
			source: '../Media/AlpacaLogoProto2.png'
		Rectangle:
			pos: self.width/2, 4*self.height/5
			size: self.width/2, self.height/5

	Label:
		font_size: 45
		color: 0,0,0,1
		center_x: 3*root.width / 4
		top: root.top - 50
		text: "The Automated Logic Processor\n And Creation Application"

