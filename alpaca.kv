#:kivy 1.11.1

<MenuScreen>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: root.size
            pos: root.pos

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            Image:
                source: '../Media/AlpacaLogoProto2.png'

        BoxLayout:
            size_hint_y: 0.2
            padding: 10
            spacing: 10

            Button:
                text: 'Help!'
                font_name: 'DejaVuSans.ttf'

                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'Help'

                Image:
                    source: '../Media/Icons/help-icon.png'
                    y: self.parent.y
                    x: self.parent.x

            Button:
                text: 'New Project!'
                font_name: 'DejaVuSans.ttf'

                on_press:
                    root.manager.transition.direction = 'up'
                    root.manager.current = 'NewProject'
            Button:
                text: 'Existing Project!'
                font_name: 'DejaVuSans.ttf'

                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'ExistingProject'
