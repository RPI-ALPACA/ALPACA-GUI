#:kivy 1.11.1

<MenuScreen>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: root.size
            pos: root.pos

<LogoBody>:
    size_hint_y: 0.9
    spacing: 2
    orientation: 'horizontal'

<AlpacaLogo>:
    source: '../Media/AlpacaLogoProto2.png'

<NavigationButton>:
    font_name: 'Roboto-Bold.ttf'
    font_size: 42

<HelpButton>:
    size_hint_y: 0.13
    size_hint_x: 0.09
    background_normal: "../Media/Icons/help-icon.png"

<NavigationBar>:
    padding: 10
    spacing: 10

    canvas.before:
        Color: 
            rgba: 0.7,0.7,0.7,1
        Rectangle:
            size: root.size